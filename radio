#!/bin/sh
# Play a stream with mplayer, outputting IceCast track titles to status bar

on_exit () {
  xmobar-msg
}
trap on_exit INT 0

stream=${1:-"http://sfstream1.somafm.com:3000"}
echo "Playing $stream"
mplayer $stream 2> /dev/null | stdbuf -i0 -o0 -e0 sed -n "s/.*StreamTitle='\([^']\+\)'.*/â–¶ \1/p" > ~/.xmobarmsg.fifo
